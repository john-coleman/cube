= simple_form_for @device do |f|
  - if @device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
      %ul
        - @device.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :hostname
    = f.text_field :hostname
  .field
    = f.label :domain
    = f.text_field :domain
  .field
    = f.label :os
    = f.text_field :os
  .field
    = f.label :pci_scope
    = f.text_field :pci_scope
  .actions
    = f.submit 'Save'
